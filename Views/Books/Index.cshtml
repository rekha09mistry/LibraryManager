@model IEnumerable<LibraryManager.Models.Book>
@{
    ViewData["Title"] = "Books";
}

<h1>Library Books</h1>
<p><a asp-action="Create">Add new book</a></p>

<table class="table table-striped">
    <thead>
        <tr><th>Title</th><th>Author</th><th>Year</th><th>Genre</th><th>Available</th><th></th></tr>
    </thead>
    <tbody>
    @foreach (var b in Model)
    {
        <tr>
            <td>@b.Title</td>
            <td>@b.Author</td>
            <td>@b.PublishedYear</td>
            <td>@b.Genre</td>
            <td>@(b.IsAvailable ? "Yes" : "No")</td>
            <td>
                <a asp-action="Details" asp-route-id="@b.Id">Details</a> |
                <a asp-action="Edit" asp-route-id="@b.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@b.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
