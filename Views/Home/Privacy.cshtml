@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container mt-4 bg-light p-4 rounded shadow" style="max-width: 800px;">
    <h2 class="text-center mb-3">@ViewData["Title"]</h2>

    <p>
        We collect and manage library-related data such as book details to ensure smooth library operations. We do not share personal
        data with any third-party organizations.
    </p>

    <form id="privacyForm">
        <div class="form-check mt-3">
            <input type="checkbox" class="form-check-input" id="agreeCheck" required />
            <label class="form-check-label" for="agreeCheck">
                I agree to the Privacy Policy stated above.
            </label>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Confirm</button>
    </form>

    <div id="message" class="text-success fw-bold mt-3" style="display: none;">
        ✅ Thank you for accepting our policy.
    </div>
</div>

<script>
document.getElementById("privacyForm").addEventListener("submit", function (e) {
    e.preventDefault();
    document.getElementById("message").style.display = "block";
});
</script>
